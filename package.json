{
  "name": "copy-url",
  "displayName": "Copy url",
  "version": "0.0.1",
  "description": "Quickly copy the current url to your clipboard",
  "author": "chrisjarling",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "motion": "^11.15.0",
    "plasmo": "0.73.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.227",
    "@types/node": "18.15.11",
    "@types/react": "18.0.32",
    "@types/react-dom": "18.0.11",
    "prettier": "2.8.7",
    "typescript": "5.0.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "commands",
      "tabs",
      "clipboardWrite",
      "scripting"
    ],
    "commands": {
      "copy-url": {
        "suggested_key": {
          "default": "Ctrl+Shift+C",
          "mac": "MacCtrl+Command+C",
          "windows": "Ctrl+Shift+C",
          "linux": "Ctrl+Shift+C",
          "chromeos": "Ctrl+Shift+C"
        },
        "description": "Copy the current url to your clipboard"
      }
    }
  }
}
